<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_theme"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MenuBisindo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/icon_bisindoku"/>

        <!--        <TextView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_gravity="center"-->
        <!--            android:layout_marginBottom="40dp"-->
        <!--            android:background="@drawable/background_title"-->
        <!--            android:gravity="center"-->
        <!--            android:text="@string/bisindoku"-->
        <!--            android:textColor="@color/white"-->
        <!--            android:textSize="30sp" />-->

        <TextView
            android:id="@+id/btnOrganTubuh"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:background="@drawable/background_button_menu"
            android:clickable="true"
            android:gravity="center"
            android:padding="15dp"
            android:shadowColor="@color/Light_Blue_900"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="10"
            android:text="@string/nama_organ_tubuh"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ekspresiWajah"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:background="@drawable/background_button_menu"
            android:clickable="true"
            android:gravity="center"
            android:padding="15dp"
            android:shadowColor="@color/Light_Blue_900"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="10"
            android:text="@string/ekspresi_wajah"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/kuis"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/background_button_menu"
            android:clickable="true"
            android:gravity="center"
            android:padding="15dp"
            android:shadowColor="@color/Light_Blue_900"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="10"
            android:text="@string/kuis"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </LinearLayout>


</LinearLayout>